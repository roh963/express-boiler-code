{
  "info": {
    "_postman_id": "express-starter-collection",
    "name": "Express Mongo Starter",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Express Mongo Starter: Auth, Feedback CRUD, Health."
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Create Feedback (valid)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"message\": \"This is a valid feedback message.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/feedback",
          "host": ["{{baseUrl}}"],
          "path": ["feedback"]
        }
      },
      "response": []
    },
    {
      "name": "Create Feedback (invalid)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"A\",\n  \"email\": \"not-an-email\",\n  \"message\": \"short\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/feedback",
          "host": ["{{baseUrl}}"],
          "path": ["feedback"]
        }
      },
      "response": []
    },
    {
      "name": "List Feedback (paginated)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/feedback?page=1&limit=5",
          "host": ["{{baseUrl}}"],
          "path": ["feedback"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "5" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Feedback by ID",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/feedback/{{feedbackId}}",
          "host": ["{{baseUrl}}"],
          "path": ["feedback", "{{feedbackId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Feedback",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"Updated feedback message.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/feedback/{{feedbackId}}",
          "host": ["{{baseUrl}}"],
          "path": ["feedback", "{{feedbackId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Feedback (ADMIN only)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{adminAccessToken}}" }],
        "url": {
          "raw": "{{baseUrl}}/feedback/{{feedbackId}}",
          "host": ["{{baseUrl}}"],
          "path": ["feedback", "{{feedbackId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Unauthorized Feedback Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Anon\",\n  \"email\": \"anon@example.com\",\n  \"message\": \"Should fail\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/feedback",
          "host": ["{{baseUrl}}"],
          "path": ["feedback"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "accessToken", "value": "" },
    { "key": "adminAccessToken", "value": "" },
    { "key": "feedbackId", "value": "" }
  ]
}
